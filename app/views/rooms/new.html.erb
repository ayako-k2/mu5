<%= render "shared/header" %>

<%= form_with model: @room, url: rooms_path, local: true do |form| %>
  <div>
    <%= form.file_field :image, id:"item-image-upload" %>
  


    <%= form.label :name %>
    <%= form.text_field :name, id: "name", required: true %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_field :description, id: "description", required: true %>
  </div>

  <div>
    <%= form.submit "Create Room" %>
  </div>
<% end %>